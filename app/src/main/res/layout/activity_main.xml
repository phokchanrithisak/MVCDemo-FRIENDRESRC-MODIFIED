<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.somto.mvcdemo.MainActivity">

    <EditText
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your number ID"

        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="casual"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:textColor="#000000"
        tools:layout_editor_absoluteY="185dp"
        android:layout_marginTop="19dp"
        tools:targetApi="jelly_bean"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your full name"
        android:fontFamily="casual"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:textColor="#000000"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="93dp"
        tools:targetApi="jelly_bean"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/userID"
        android:layout_alignStart="@+id/userID" />

    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:textColor="#FFFFFF"
        android:text="Log In"
        android:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="22dp"
        tools:targetApi="jelly_bean"
        android:layout_below="@+id/userID"
        android:layout_alignRight="@+id/userID"
        android:layout_alignEnd="@+id/userID"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:text="Kirirom Institute of Technology"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:textColor="@color/KIT"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Welcome to student account"
        android:textColor="@color/KIT"
        android:fontFamily="casual"/>
</RelativeLayout>
